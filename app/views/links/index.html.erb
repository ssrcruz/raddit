    <% @links.each do |link| %>
      <ul id="links">
        <h3><%= link_to link.title, link %> </h3>
        <p>Submitted by <%= link.user.email %> <%= time_ago_in_words(link.created_at)%> ago<p>
        <% if link.user == current_user %>
          <td><%= link_to 'Edit', edit_link_path(link) %> </td>
          <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
        <% end %>
      </ul>
    <% end %>


